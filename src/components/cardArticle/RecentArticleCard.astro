---
const { articles } = Astro.props;
---

<section class="flex gap-2 flex-col md:flex-row">
    {
        articles.map((article: any) => (
            <a
                class="border border-gray-200 py-6 px-4 flex-col md:flex-col justify-between rounded hover:bg-gray-100 transition duration-200 w-full md:w-1/2 fade-in"
                href={`/articles/${article.data.slug}`}
            >
                <div>
                    <h2 class="font-semibold text-xl">{article.data.title}</h2>
                    <p class="text-normal mt-2 text-gray-600">
                        {article.data.description}
                    </p>
                </div>
                <dir class="flex justify-between mt-6 text-gray-800 font-normal text-sm">
                    <span>{article.data.datePublish}</span>
                    <span>{article.data.readTime}</span>
                </dir>
            </a>
        ))
    }
</section>
