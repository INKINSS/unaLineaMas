---
export interface Props {
  href: string;
  class?: string;
  activeClass?: string;
  exact?: boolean;
}

const {
  href,
  class: className = "",
  activeClass = "active",
  exact = false,
} = Astro.props;
const currentPath = Astro.url.pathname;

const isActive = exact ? currentPath === href : currentPath.startsWith(href);

const finalClass =
  `${className} ${isActive ? activeClass : ""} text-[.8rem]`.trim();
---

<a href={href} class={finalClass}>
  <slot />
</a>
